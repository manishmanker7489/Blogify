<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head')  %>

    <title>Blog Page</title>
</head>
<body>  
    <%- include('./partials/nav') %>

    <div class="container">
        <h1 class="mt-3" > <%= blog.title %> </h1>
        <img  class="m-3" src="<%= blog.coverImageURL %>" alt="" width="300px" />
        <pre  class="mt-3"   > <%= blog.body %> </pre>
    </div>

    <div class="container mt-3">
        <img src="<%= blog.createdBy.profileImageURL %>" width="50px"  alt="">
        <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">

        <h2>Comment's..(<%= comments.length %>) </h2>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%=blog._id %>" method="post" >
                <input type="text" name="comment" class="form-control" placeholder="Enter Your Comment.. " />
                <button type="submit" class="btn btn-sm btn-primary mt-2 mb-4" >Add</button>
            </form>
            <% } %>        

            <% comments.reverse().forEach(comment => { %>
             
                <div class="mt-4 mx-4" >
                    <img src="<%= comment.createdBy.profileImageURL %>" width="50px"/>
                    <div class="text-dark" >  <%= comment.createdBy.fullName %></div>
                    <pre class="mx-4 text-secondary"> <%= comment.comment %> </pre>
                </div>
            <% }) %>


    </div>

    <%- include('./partials/script') %>
</body> 
</html>